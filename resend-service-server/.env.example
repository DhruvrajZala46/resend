# ==============================
# SERVER CONFIG
# ==============================
PORT=5000
API_PREFIX=/api
NODE_ENV=development

# ==============================
# DATABASE
# ==============================
MONGO_URI=mongodb://localhost:27017/resend

# ==============================
# MAILER MODE
# 'relay' = use external SMTP (Gmail, etc.)
# 'direct' = send emails directly (advanced)
# ==============================
MAILER_MODE=relay

# ==============================
# SMTP RELAY SETTINGS
# (Used only if MAILER_MODE=relay)
# ==============================
SMTP_RELAY_HOST=smtp.example.com
SMTP_RELAY_PORT=587
SMTP_RELAY_USER=your_email@example.com
SMTP_RELAY_PASS=your_app_password_here
SMTP_RELAY_SECURE=false

# ==============================
# WORKER CONFIG (EMAIL SENDING ENGINE)
# ==============================
WORKER_INSTANCES=3
WORKER_INTERVAL_MS=1000
WORKER_BATCH_SIZE=10
MAX_PARALLEL_EMAILS=5
MAX_RETRIES=3
BASE_RETRY_DELAY_MS=5000

# ==============================
# OPTIONAL INTERNAL SMTP SERVER
# (Allows external apps to send emails through your server)
# ==============================
ENABLE_SMTP_SERVER=false
SMTP_LISTEN_PORT=2525

# ==============================
# CLIENT & AUTH
# ==============================
CLIENT_URL=http://localhost:5173
JWT_SECRET=your_jwt_secret_here

# ==============================
# SECURITY / ENCRYPTION
# ==============================
APP_ENCRYPTION_KEY=your_base64_encryption_key_here
INTERNAL_SERVER_SECRET=your_internal_server_secret_here
